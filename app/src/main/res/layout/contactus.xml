<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">


    <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/logo"/>


    <Button
            android:id="@+id/btn"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txt1"
            android:layout_marginStart="10dp"

            android:background="@drawable/loca" />

    <TextView
            android:id="@+id/txt1"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="249dp"
            android:gravity="center"
            android:text="SRS Tower, Unit No. 432,Near Mewla Maharajpur, Sector 31, Faridabad, Haryana 121001"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp"/>


    <Button
            android:id="@+id/buttonCall"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txt2"
            android:layout_marginStart="13dp"
            android:background="@drawable/logo" />

    <TextView
            android:id="@+id/txt2"
            android:layout_width="158dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txt3"
            android:layout_gravity="center"
            android:layout_marginBottom="215dp"
            android:gravity="center"
            android:text="8188507773"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_marginEnd="30dp"/>


    <Button
            android:id="@+id/butt"
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:layout_alignStart="@+id/btn"
            android:layout_alignTop="@+id/txt3"
            android:background="@drawable/loca" />

    <TextView
            android:id="@+id/txt3"
            android:layout_width="288dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="124dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:text="info@bukkhadrestaurants.com"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp"/>




</RelativeLayout>


